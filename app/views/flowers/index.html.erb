<p id="notice"><%= notice %></p>

<h1>Flowers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>THC</th>
      <th>Description</th>
      <th>Indica</th>
      <th>Sativa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flowers.each do |flower| %>
      <tr>
        <td><%= flower.name %></td>
        <td><%= flower.price %></td>
        <td><%= flower.thc %></td>
        <td><%= flower.description %></td>
        <td><%= link_to 'Show', flower %></td>
          <% if current_user && current_user.admin %>
          <td><%= link_to 'New Flower', new_flower_path %></td>
          <td><%= link_to 'Edit', edit_flower_path(flower) %></td>
          <td><%= link_to 'Destroy', flower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
